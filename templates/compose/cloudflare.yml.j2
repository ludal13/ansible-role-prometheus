version: '3.7'

networks:
  {{ prometheus_docker_network }}:
    external: true

services:
  cloudflare-exporter:
    container_name: cloudflare-exporter
    image: ghcr.io/lablabs/cloudflare_exporter:latest
    restart: unless-stopped
    environment:
      - CF_API_TOKEN={{ cloudflare_api_key }}
    ports:
      - 8082:8080
    networks:
      - {{ prometheus_docker_network }}
